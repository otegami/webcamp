<h1>Edit Post</h1>
<%= form_for(@book) do |b| %>
  <h4>Title</h4>
  <%= b.text_field :title, class: "book_title"%>
  <h4>Body</h4>
  <%= b.text_area :body, class: "book_body" %>
  <p><%= b.submit 'Post it'%></p>

  <!-- create edit_link -->
  <%= link_to "Show", book_path(@book), class: "show_#{@book.id}" %>
  <!-- create index_link -->
  <%= link_to "Back", books_path, class: "back" %>

<% end %>
